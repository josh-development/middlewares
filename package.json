{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "generate": "node scripts/generate/generate.mjs",
    "clean": "rimraf \"packages/**/dist\" \"packages/**/node_modules/.cache\"",
    "docs": "typedoc",
    "lint": "eslint packages scripts --ext mjs,ts --fix",
    "format": "prettier --write \"{packages,scripts}/**/*.{mjs,ts}\"",
    "build": "yarn workspaces foreach -v --no-private run build",
    "update": "yarn upgrade-interactive",
    "publish": "yarn workspaces foreach -v --no-private npm publish",
    "prepublishOnly": "yarn workspaces foreach -v --no-private run prepublishOnly",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@favware/npm-deprecate": "^1.0.4",
    "@favware/rollup-type-bundler": "^1.0.7",
    "@sapphire/eslint-config": "^4.3.4",
    "@sapphire/ts-config": "^3.3.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.71.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-version-injector": "^1.3.3",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/middlewares.git"
  },
  "files": [
    "dist",
    "!dist/*.tsbuildinfo"
  ],
  "engines": {
    "node": ">=16",
    "npm": ">=6"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/josh-development/middlewares/issues"
  },
  "homepage": "https://github.com/josh-development/middlewares",
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix --ext mjs,ts"
  },
  "packageManager": "yarn@3.2.0"
}
