{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf coverage \"packages/**/dist\" \"packages/**/build\" \"packages/**/.turbo\" \"packages/**/node_modules/.cache\" \"node_modules/.cache\"",
    "docs": "turbo run docs",
    "lint": "eslint packages scripts --ext mjs,js,ts --fix",
    "format": "prettier --write \"packages/**/{src,tests}/**/*.{mjs,js,ts}\"",
    "test": "vitest run",
    "build": "turbo run build",
    "update": "yarn upgrade-interactive",
    "check-update": "turbo run check-update",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@favware/cliff-jumper": "^2.1.1",
    "@favware/colorette-spinner": "^1.0.1",
    "@favware/npm-deprecate": "^1.0.7",
    "@favware/rollup-type-bundler": "^2.0.0",
    "@joshdb/eslint-config": "1.1.0-next.a699598.0",
    "@joshdb/map": "2.0.0-next.8e3f34a.0",
    "@joshdb/ts-config": "1.1.0-next.a699598.0",
    "@types/node": "^18.17.6",
    "@types/prompts": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.34.2",
    "colorette": "^2.0.20",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "tslib": "^2.6.2",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-development/middlewares.git"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{mjs,ts}": "eslint --fix --ext mjs,ts"
  },
  "packageManager": "yarn@3.6.3"
}
